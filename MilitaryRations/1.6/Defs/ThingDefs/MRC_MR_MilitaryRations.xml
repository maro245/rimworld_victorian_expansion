<Defs>
  <ThingDef ParentName="MealBase">
    <defName>MRC_MR_MilitaryRationUS</defName>
    <label>military ration (MRE)</label>
    <description>A high-quality packaged meal, manufactured for use in survival situations. While it never rots, it can still deteriorate if left outside. Great for traveling.</description>
    <graphicData>
      <texPath>MilitaryRationUS</texPath>
      <graphicClass>Graphic_Simple</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>0.25</DeteriorationRate>
      <MarketValue>24</MarketValue>
      <Mass>0.3</Mass>
      <WorkToMake>450</WorkToMake>
      <Nutrition>0.9</Nutrition>
    </statBases>
    <ingestible>
      <preferability>MealSimple</preferability>
      <optimalityOffsetHumanlikes>-5</optimalityOffsetHumanlikes>
      <optimalityOffsetFeedingAnimals>-100</optimalityOffsetFeedingAnimals>
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
    </ingestible>
    <allowedArchonexusCount>40</allowedArchonexusCount>
  </ThingDef>
  
