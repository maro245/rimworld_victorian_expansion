  <RecipeDef ParentName="CookMealBase">
    <defName>MRC_MR_CookMRE</defName>
    <label>cook MRE</label>
    <description>Prepare an MRE from a combination of meat and plant ingredients. Much of the ingredients are wasted in the preservation process.</description>
    <jobString>Cooking MRE.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <customSummary>protein</customSummary>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
          </categories>
        </filter>
        <count>0.30</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.30</count>
      </li>
    </ingredients>
    <products>
      <MRC_MR_MilitaryRationUS>1</MRC_MR_MilitaryRationUS>
    </products>
    <skillRequirements>
      <Cooking>8</Cooking>
    </skillRequirements>
    <researchPrerequisite>PackagedSurvivalMeal</researchPrerequisite>
    <displayPriority>1411</displayPriority>
  </RecipeDef>

